<h1> Welcome<%= current_user %>, please login to continue </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :sp_card %>
      <%= f.number_field :sp_card, class: 'form-control' %>

      <%= f.label :nip %>
      <%= f.password_field :nip, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>Forgot your nip? <%= link_to 'Retrieve nip', new_password_reset_path %></p>
    <p>New user? <%= link_to 'Sign in', signup_path %></p>
    <p class=center><small>or</small></p>

    <p class=center><%= link_to 'Sign in with Google+', '/auth/google_oauth2' %>
    | <%= link_to 'Sign in with Facebook', '/auth/facebook' %>
    | <%= link_to 'Sign in with Outlook2', '/auth/microsoft_v2_auth' %></a></p>
  </div>
</div>
